<div class="container">
  <p style="color: green"><%= notice %></p>

  <h1>Courses</h1>
  <small>Welcome <%= current_user.email %></small>
  <table class="table">
    <thead>
      <th>Prefix</th>
      <th>Number</th>
      <th>Title</th>
      <th>Assigned Tutors</th>
      <th></th>
    </thead>
    <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= course.prefix %></td>
        <td><%= course.num %></td>
        <td><%= course.title %></td>
        <td><%= course.tutors.map {|t| t.name }.join(', ') %></td>
        <td><%= link_to "See more", course_path(course), class: "btn btn-outline-primary" %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
  

  <%= link_to "New course", new_course_path , class: "btn btn-primary my-5" %>

</div>
