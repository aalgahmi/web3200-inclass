<%= form_for :session, url: session_path do |form| %>
  
  <div class="row">
    <div class="col-12">

        <div class="text-field pb-1">
          <%= form.label :email %>
        </div>

          <%= form.email_field :email, style: "width: 100%;" %>

      
        <div class="password-field mt-3 pb-1">
          <%= form.label :password %>
        </div>

          <%= form.password_field :password, style: "width: 100%"   %>

    
    </div>
  </div>

  <div class="text-center">
    <div class="submit-field mt-4">
      <%= form.submit :class => "btn btn-primary btn-lg" %>
    </div>


    <div class="other-links mt-5 mb-5">
      <% if Clearance.configuration.allow_sign_up? %>
        <%= link_to t(".sign_up"), sign_up_path, style: "padding-right: 1rem;"  %>
      <% end %>
      <%= link_to t(".forgot_password"), new_password_path %>
    </div>
  </div>
<% end %>
